<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="booking.Passenger" table="passenger">

		<id name="Fiscal_code" type="string" column="Fiscal_code">
			<generator class="assigned" />
		</id>

		<property name="name" column="Name" type="string" />
		<property name="surname" column="Surname" type="string" />
		<property name="documentCode" column="ID_code" type="string" />
		<property name="Birth_date" column="Birth_date" type="date" />
		<property name="documentType" column="Type_ID" type="string" />
		<property name="baggageId" column="Baggage_ID_Baggage" type="string" />

	</class>
</hibernate-mapping> 