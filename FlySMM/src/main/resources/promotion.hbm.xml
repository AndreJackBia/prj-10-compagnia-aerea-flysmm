<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="promotion.Promotion" table="promotion">
		<id name="idPromo" column="IdPromo" type="long">
			<generator class="native" />
		</id>
		<property name="discountRate" column="Discount_rate" type="int" />
		<property name="fidelity" column="fidelity" type="boolean" />
		<property name="name" column="Name" type="String" />
	</class>
	
	<class name="promotion.FlightPromotion" table="promotion">
		<id name="idPromo" column="IdPromo" type="long">
			<generator class="native" />
		</id>
		<property name="discountRate" column="Discount_rate" type="int" />
		<property name="fidelity" column="fidelity" type="boolean" />
		<property name="name" column="Name" type="String" />
		<!--<one-to-one name="idFlight" class="sale.Flight"
			cascade="save-update"></one-to-one> -->
	</class>
	
	<class name="promotion.SeasonPromotion" table="promotion">
		<id name="idPromo" column="IdPromo" type="long">
			<generator class="native" />
		</id>
		<property name="discountRate" column="Discount_rate" type="int" />
		<property name="fidelity" column="fidelity" type="boolean" />
		<property name="name" column="Name" type="String" />
		<property name="Start_Date" column="Start_Date" type="Date" />
		<property name="Expire_Date" column="Expire_Date" type="Date" />
	</class>
</hibernate-mapping>