<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="sale.Price" table="Price">
		<composite-id>
			<key-property name="flight" column="flight_Flight_ID"></key-property>
			<key-property name="seat" column="seat_Seat"></key-property>
		</composite-id>
		<many-to-one name="promo" class="promotion.FlightPromotion"
			column="promotion_IdPromo"></many-to-one>
		<property name="amount" column="amout" type="float" />
	</class>
</hibernate-mapping>